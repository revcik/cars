<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.example.root.supercars.BestDetailActivity"
    android:background="@color/accent_material_light_1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/car_title"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageView
        android:layout_below="@+id/car_title"
        android:layout_width="match_parent"
        android:id="@+id/car_image"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_height="180dp"/>

    <TextView
        android:layout_below="@+id/car_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engine"
        android:textSize="15dp"
        android:text="МОТОР: "/>
    <TextView
        android:layout_below="@+id/engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:textSize="15dp"
        android:text="ВЕС: "
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_below="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bhp"
        android:textSize="15dp"
        android:text="МОЩНОСТЬ: "
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_below="@+id/bhp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accel"
        android:textSize="15dp"
        android:text="УСКОРЕНИЕ: "
        android:layout_marginTop="4dp"/>
    <TextView
        android:layout_below="@+id/accel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:textSize="15dp"
        android:text="СКОРОСТЬ: "
        android:layout_marginTop="4dp"/>
    <TextView
        android:layout_below="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="15dp"
        android:text="ЦЕНА: "
        android:layout_marginTop="4dp"/>
    <TextView
        android:layout_alignTop="@+id/engine"
        android:layout_toRightOf="@+id/engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engine2"/>
    <TextView
        android:layout_alignTop="@+id/weight"
        android:layout_toRightOf="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight2"/>
    <TextView
        android:layout_alignTop="@+id/bhp"
        android:layout_toRightOf="@+id/bhp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bhp2"/>

    <TextView
        android:layout_alignTop="@+id/accel"
        android:layout_toRightOf="@+id/accel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accel2"/>
    <TextView
        android:layout_alignTop="@+id/speed"
        android:layout_toRightOf="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed2"/>
    <TextView
        android:layout_alignTop="@+id/price"
        android:layout_toRightOf="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price2"/>


    <ScrollView
        android:layout_below="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_below="@+id/price"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginTop="2dp"/>
    </ScrollView>

</RelativeLayout>
