<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">#453301</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/cardview_dark_background</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <item name="android:textColorSecondary">@android:color/holo_orange_light</item>
    </style>

    <style name="myown" parent="AppTheme">
        <item name="android:textColorSecondaryInverse">?android:attr/actionMenuTextColor</item>
        <item name="android:textColorPrimaryInverse">@android:color/holo_orange_light</item>
        <item name="android:colorBackground">@color/accent_material_light_1</item>
    </style>

</resources>
